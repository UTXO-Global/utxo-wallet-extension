{
  "name": "utxo-global-wallet-extension",
  "version": "0.0.4.0",
  "private": true,
  "scripts": {
    "prebuild": "node generate-version.ts",
    "dev": "bun build.ts --watch",
    "fire": "bun build.ts --watch --firefox",
    "chrome": "node generate-version.ts && bun build.ts && rollup --config",
    "firefox": "node generate-version.ts && bun build.ts --firefox && rollup --config --environment firefox",
    "both": "rm -rf dist && node generate-version.ts && build.ts && rollup --config && build.ts --firefox && rollup --config --environment firefox",
    "release:chrome": "rm -rf dist/chrome && node generate-version.ts && node generate-version.ts && bun build.ts && rollup --config --compact --minifyInternalExports",
    "release:firefox": "rm -rf dist/firefox && node generate-version.ts && bun build.ts --firefox && rollup --config --environment firefox --compact --minifyInternalExports",
    "release": "rm -rf dist && node generate-version.ts node generate-version.ts && bun build.ts && rollup --config --compact --minifyInternalExports && bun build.ts --firefox && rollup --config --environment firefox --compact --minifyInternalExports",
    "sourcemap": "bun build.ts --sourcemap",
    "lint": "eslint ./src"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.1.1",
